<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.austin.harrypotterappproject2.MainActivity"
    android:background="@drawable/background2"
    >

    <ImageView
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:id="@+id/title"
        android:background="@drawable/titlehp"
        android:onClick="whenHPClicked"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text=""
        android:id="@+id/mvoies"
        android:background="@drawable/movies"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:onClick="whenClickedMovies"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/movie1"
        android:background="@drawable/hpv1sor"
        android:layout_alignTop="@+id/mvoies"
        android:layout_alignLeft="@+id/book1"
        android:layout_alignStart="@+id/book1" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/books"
        android:background="@drawable/books"
        android:layout_below="@+id/movie1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="whenClickedBooks"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/book1"
        android:background="@drawable/book1hp"
        android:layout_below="@+id/movie1"
        android:layout_alignRight="@+id/quotes1"
        android:layout_alignEnd="@+id/quotes1" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/quotes"
        android:background="@drawable/quotes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="whenClickedQuotes"/>
    <ImageView
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:id="@+id/quotes1"
        android:background="@drawable/smiles2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
