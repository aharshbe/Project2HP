<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/title"
        android:background="@drawable/movies" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/movie1"
        android:background="@drawable/hpvmovie1"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/movie1cover"
        android:background="@drawable/hpv1sor"
        android:layout_alignTop="@+id/movie1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/movie2"
        android:background="@drawable/hpvmovie2"
        android:layout_below="@+id/movie1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/movie2cover"
        android:background="@drawable/hpv22"
        android:layout_alignTop="@+id/movie2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/movie3"
        android:background="@drawable/hpvmovie3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp" />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/movie2cover"
        android:background="@drawable/hpv3c"
        android:layout_alignTop="@+id/movie3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>