<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.austin.harrypotterappproject2.QuotesActivity"
    android:background="@drawable/background2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/quotetitle"
        android:background="@drawable/quotes"
        android:onClick="clickingquotes"/>
    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#A9A9A9"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/quote1"
        android:background="@drawable/dumbledore"
        android:layout_below="@+id/quotetitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickingdumbledore"/>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/char1"
        android:background="@drawable/dumbledoretwo"
        android:layout_below="@+id/quotetitle"
        android:layout_alignRight="@+id/quotetitle"
        android:layout_alignEnd="@+id/quotetitle"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/quote2"
        android:background="@drawable/snapetext"
        android:layout_below="@+id/char1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:id="@+id/char2"
        android:background="@drawable/snapeimage"
        android:layout_below="@+id/char1"
        android:layout_toRightOf="@+id/quote2"
        android:layout_toEndOf="@+id/quote2" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/quote3"
        android:background="@drawable/dobbytext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp" />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/char3"
        android:background="@drawable/dobby"
        android:layout_alignTop="@+id/quote3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
