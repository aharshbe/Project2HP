<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5">

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:id="@+id/Plot"
        android:background="@drawable/plot"/>
    <ListView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/plotlistview"
        android:layout_below="@+id/Plot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#F0F8FF"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text=""
        android:id="@+id/Date"
        android:background="@drawable/date"
        android:layout_below="@+id/plotlistview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/runtime"
        android:background="@drawable/runtime"
        android:layout_below="@+id/Date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/topquote"
        android:background="@drawable/topquote"
        android:layout_below="@+id/runtime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text=""
        android:id="@+id/gross"
        android:background="@drawable/gross"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datelistView"
        android:layout_above="@+id/runtime"
        android:layout_toRightOf="@+id/Plot"
        android:layout_toEndOf="@+id/Plot"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/plotlistview"
        android:background="#F0F8FF"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/runtimelistView"
        android:layout_alignBottom="@+id/runtime"
        android:layout_alignLeft="@+id/datelistView"
        android:layout_alignStart="@+id/datelistView"
        android:layout_alignTop="@+id/runtime"
        android:background="#F0F8FF"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topquotelistView"
        android:layout_alignLeft="@+id/runtimelistView"
        android:layout_alignStart="@+id/runtimelistView"
        android:layout_below="@+id/runtimelistView"
        android:layout_above="@+id/grosslistView"
        android:background="#F0F8FF"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grosslistView"
        android:layout_alignLeft="@+id/topquotelistView"
        android:layout_alignStart="@+id/topquotelistView"
        android:layout_alignTop="@+id/gross"
        android:background="#F0F8FF"/>
</RelativeLayout>